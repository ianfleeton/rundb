<%= form_for(@event) do |f| %>
  <div class="form-field">
    <%= f.label :title, class: "label" %>
    <%= f.text_field :title, required: true, class: "input" %>
  </div>
  <div class="form-field">
    <%= f.label :city, class: "label" %>
    <%= f.text_field :city, required: true, class: "input" %>
  </div>
  <div class="form-field">
    <%= f.label :description, class: "label" %>
    <%= f.text_area :description, class: "textarea" %>
  </div>
  <div class="form-field">
    <%= f.label :organiser, class: "label" %>
    <%= f.text_field :organiser, required: true, class: "input" %>
  </div>
  <div class="form-field">
    <%= f.label :starts_on, class: "label" %>
    <%= f.date_field :starts_on, required: true, class: "input" %>
  </div>
  <div class="form-field">
    <%= f.label :web, class: "label" %>
    <%= f.url_field :web, required: true, class: "input" %>
  </div>
  <div class="form-field">
    <%= f.label :reg, class: "label" %>
    <%= f.url_field :reg, class: "input" %>
  </div>
  <div class="form-submit">
    <%= f.submit class: "button is-primary" %>
  </div>
<% end %>
